algoritmo "condicionais"
var
 ano , nasc, idade:inteiro
inicio
 escreva("Em que ano estamos ?")
 leia(ano)
 escreva("Em qual ano eu nasci ?")
 leia(nasc)
 idade<- ano-nasc
 escreva("Eu tenho ", idade, " de idade.")
 se (idade>=18) entao
 escreva("Ja sou maior de idade.")
 FimSe

fimalgoritmo
